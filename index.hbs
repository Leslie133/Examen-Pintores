{{>header}}
<div class="container">
    <h1>Pintores</h1>
    {{#if pintores}}
    <table class="table table-dark table-hover"></table>
    <thead>
        <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Nacionalidad</td>
            <td>corriente</td>
            <td>pintura</td>
        </tr>
    </thead>
    <tbody>
        {{#each pintores}}
             <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{nacionalidad}}</td>
            <td>{{corriente}}</td>
            <td>{{pintura}}</td>

        {{/each}}
    </tbody>
    {{else}}
    <div>No se encontaron pintores</div>
    {{/if}}
</div>

{{>footer}}
